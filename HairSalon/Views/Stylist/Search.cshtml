@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Stylist>;

<h1>Search Results</h1>

<div class="box">
  <div class="inner-box">
    @if (@Model.Count == 0) 
    {
      <p>No issues matched!</p>
    }
    else
    {
      
          @foreach (Stylist stylist in Model)
          {
            <li>@Html.ActionLink($"{stylist.Name}", "Details", new {id = stylist.StylistId })</li>
          }
        
    }
  </div>
</div>


<p>@Html.ActionLink("Add Stylist", "Create")</p>
<p>@Html.ActionLink("Homepage", "Index", "Home")</p>
<form action="/stylsit/Search" method="post">
  <label>Enter a Search</label>
  <input class="input" type="text" id="search" name="search">
  <input type="submit" value="Search" class="btn btn-info buttons" />
</form>