@{
  Layout = "_Layout";
}
@model HairSalon.Models.Stylist

<h3>Edit Stylist</h3>
@using(Html.BeginForm())
{ 
  @Html.HiddenFor(model => model.StylistId)
  <table class="set-table">
    <tr>
      <td>@Html.LabelFor(model => model.Name)</td>
      <td>@Html.TextBoxFor(model => model.Name, new { @required = "required"})</td>
    </tr>
    <tr>
      <td>@Html.LabelFor(model => model.Details)</td>
      <td>@Html.TextAreaFor(model => model.Details, new { @class="big-input"})</td>
    </tr>
    </table>
    <input type="submit" value="Save"  class="btn btn-default" />
}
<p>@Html.ActionLink("Back to List", "Index")</p>