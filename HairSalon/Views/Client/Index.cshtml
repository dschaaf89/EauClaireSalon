@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Client</h1>

@if (@Model.Count == 0)
{
  <p>No Clients have been added yet!</p>
} 
<div class="box">
  <div class="inner-box">
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) </li>
    }
  </div>
</div>
<p>@Html.ActionLink("Add new Client", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>